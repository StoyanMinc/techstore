{{setTitle 'Profile'}}

<section class="profile-hero">
    <div class="container">
        <h2>User Profile</h2>
        <p>Welcome back, <span id="username">{{username}}</span> <strong id="email">( {{email}})</strong></p>
    </div>
</section>

<section class="created-laptops">
    <div class="container">
        <h3>Created Laptops</h3>
        <div class="laptop-list">
            {{#if userOffers.length}}
            {{#each userOffers}}
            <div class="laptop-item">
                <img src="{{imageUrl}}" alt="Laptop">
                <p><strong>Brand:</strong> {{brand}}</p>
                <p><strong>Model:</strong> {{model}}</p>
                <a href="/computers/{{_id}}/details" class="btn">View Details</a>
            </div>
            {{/each}}
            {{else}}
            <p class="no-post">You haven't created a post yet</p>
            {{/if}}
            <!-- Add more laptop items as needed -->
        </div>
    </div>
</section>

<section class="preferred-laptops">
    <div class="container">
        <h3>Preferred Laptops</h3>
        {{#if preferredComputers.length}}
        {{#each preferredComputers}}
        <div class="laptop-item">
            <img src="{{imageUrl}}" alt="Laptop">
            <p><strong>Brand:</strong> {{brand}}</p>
            <p><strong>Model:</strong> {{model}}</p>
            <a href="/computers/{{_id}}/details" class="btn">View Details</a>
        </div>
        {{/each}}
        {{else}}
        <p class="no-post">You haven't created a post yet</p>
        {{/if}}
    </div>
    </div>
</section>